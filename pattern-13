import java.util.*;
public class Main {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
	    int num=sc.nextInt();
	    for(int i=1;i<=num;i++)
	    {
	        for(int j=1;j<=2*num;j++)
	        {
	            if(i==j||i+j==num*2)
	            System.out.print("*");
	            else
	            System.out.print(" ");
	         }
          System.out.println();
	    }
	}
}
